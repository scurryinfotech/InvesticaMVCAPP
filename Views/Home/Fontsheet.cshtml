@{
    ViewData["Title"] = "Frontsheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom">
    @Html.Partial("~/Views/Shared/_frontSheetLeftPanel.cshtml")

    <div class="dashboard">
        <div class="card p-0">

            <!-- Frontsheet Selector Section -->
            <div style="background:#f8f9fa; padding:15px; border-bottom:2px solid #0f1445;">
                <div style="display:flex; gap:10px; align-items:center; flex-wrap:wrap;">
                    <div style="flex:1; min-width:250px;">
                        <label style="font-weight:bold; font-size:11px; display:block; margin-bottom:5px;">SELECT FRONTSHEET:</label>
                        <select id="frontsheetSelector" class="form-control" style="font-size:12px;">
                            <option value="">-- Select Frontsheet --</option>
                        </select>
                    </div>
                    <div style="display:flex; gap:10px; align-items:flex-end;">
                        <button class="btn btn-success" id="createNewFrontsheet" style="padding:8px 15px; font-size:12px; font-weight:bold;">
                            <i class="fa fa-plus"></i> New
                        </button>
                        <button class="btn btn-danger" id="deleteFrontsheet" style="padding:8px 15px; font-size:12px; font-weight:bold;">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>

            <div style="background:#fff; padding:0; font-family:Arial, sans-serif; line-height:1.4; font-size:12px;">

                <div style="background:#fff; padding:15px; border-bottom:2px solid #0f1445; display:flex; justify-content:space-between; align-items:center;">
                    <div style="flex:1;">
                        <div style="background:#ff69b4; padding:8px 12px; border-radius:8px; display:inline-block; font-weight:bold; color:#000;">
                            INVESTICA
                        </div>
                        <div style="margin-top:5px; font-size:10px; color:#666;">
                            For New Client Acquisition / Existing Client Update
                        </div>
                    </div>

                    <div style="text-align:center; font-size:14px; font-weight:bold; color:#0f1445;">
                        INVESTICA
                    </div>

                    <div style="text-align:right;">
                        <div style="font-size:10px; font-weight:bold;">CRN NO:</div>
                        <div style="border:1px solid #333; padding:4px 8px; min-width:80px; text-align:center;" id="fs_crn"></div>
                    </div>
                </div>

                <div style="text-align:center; padding:10px; background:#f8f9fa; border-bottom:1px solid #ddd; font-weight:bold; font-size:11px;">
                    FOR NEW CLIENT ACQUISITION / EXISTING CLIENT UPDATE APPLICATION FORM
                </div>

                <div style="padding:15px;">

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            NAME / ENTITY NAME:
                        </div>
                        <div id="fs_name" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                            —
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            ADDRESS:
                        </div>
                        <div id="fs_address" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                            —
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-bottom:10px;">
                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                CONTACT DETAILS: PHONE/ MOB:
                            </div>
                            <div id="fs_phone" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                E-MAIL ID:
                            </div>
                            <div id="fs_email" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            INDIVIDUAL/PROMOTER/PARTNER/DIRECTOR/HUF NAME & ADDRESS(s):
                        </div>
                        <div id="fs_director" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                            —
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-bottom:10px;">
                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                ENTITY TYPE:
                            </div>
                            <div id="fs_entitytype" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                PAN & AADHAR:
                            </div>
                            <div id="fs_pan" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-bottom:10px;">
                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                NATURE OF BUSINESS:
                            </div>
                            <div id="fs_business" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                ENTITY PAN:
                            </div>
                            <div id="fs_epan" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">
                                —
                            </div>
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:1fr 1fr 1fr; gap:8px; margin-bottom:10px;">
                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                DOB:
                            </div>
                            <div id="fs_dob" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                GENDER:
                            </div>
                            <div id="fs_gender" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                MARITAL STATUS:
                            </div>
                            <div id="fs_marital" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            FATHER'S NAME / MOTHER'S NAME / SPOUSE NAME:
                        </div>
                        <div id="fs_family" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            ENTITY LOCATION :-
                        </div>

                        <div style="display:grid; grid-template-columns:1fr 1fr 1fr; gap:8px; margin-top:6px;">
                            <div>
                                <div style="font-size:9px; font-weight:bold;">AREA:</div>
                                <div id="fs_area" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>
                            <div>
                                <div style="font-size:9px; font-weight:bold;">WARD:</div>
                                <div id="fs_ward" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>
                            <div>
                                <div style="font-size:9px; font-weight:bold;">ZONE:</div>
                                <div id="fs_zone" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            PRODUCT / SERVICE SOLD:
                        </div>
                        <div id="fs_product" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            DOCUMENTS PYC SUBMITTED:
                        </div>

                        <div style="display:grid; grid-template-columns:1fr 1fr; gap:8px; margin-top:6px;">
                            <div style="display:flex; gap:10px;">
                                <label style="display:flex; align-items:center; gap:5px;">
                                    <input type="checkbox" checked> <span style="font-size:10px;">PAN</span>
                                </label>
                                <label style="display:flex; align-items:center; gap:5px;">
                                    <input type="checkbox" checked> <span style="font-size:10px;">AADHAR</span>
                                </label>
                            </div>

                            <div style="display:flex; gap:10px;">
                                <label style="display:flex; align-items:center; gap:5px;">
                                    <input type="checkbox" checked> <span style="font-size:10px;">ADDRESS PROOF</span>
                                </label>
                                <label style="display:flex; align-items:center; gap:5px;">
                                    <input type="checkbox" checked> <span style="font-size:10px;">BANK DETAILS</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            PHOTOGRAPH / SHOP PHOTO / MDA/COI/AOA/PART. DEED:
                        </div>

                        <div style="display:flex; gap:20px; margin-top:6px;">
                            <label style="display:flex; align-items:center; gap:5px;">
                                <input type="checkbox" checked> <span style="font-size:10px;">PHOTOGRAPH</span>
                            </label>
                            <label style="display:flex; align-items:center; gap:5px;">
                                <input type="checkbox"> <span style="font-size:10px;">SHOP PHOTO</span>
                            </label>
                            <label style="display:flex; align-items:center; gap:5px;">
                                <input type="checkbox" checked> <span style="font-size:10px;">MDA/COI/AOA/PART. DEED</span>
                            </label>
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-bottom:10px;">
                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                CLIENT SOURCE:
                            </div>
                            <div id="fs_source" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                        </div>

                        <div style="border:1px solid #000; padding:8px;">
                            <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                                SOURCED BY ALONG WITH EMP. ID:
                            </div>
                            <div id="fs_sourcedby" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:20px;">—</div>
                        </div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:10px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            COMMENTS/REMARKS/ADDITIONAL INFO:
                        </div>
                        <div id="fs_comments" style="padding:6px; border:1px solid #ccc; background:#fff; min-height:30px;">—</div>
                    </div>

                    <div style="border:1px solid #000; margin-bottom:15px; padding:8px;">
                        <div style="font-weight:bold; font-size:10px; background:#f0f0f0; padding:4px; margin-bottom:4px;">
                            OTHER INTERNAL DETAILS:
                        </div>

                        <div style="display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-top:6px;">
                            <div>
                                <div style="font-size:9px; font-weight:bold;">LOGIN:</div>
                                <div id="fs_login" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>

                            <div>
                                <div style="font-size:9px; font-weight:bold;">PASSWORD:</div>
                                <div id="fs_password" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>
                        </div>

                        <div style="margin-top:6px;">
                            <div style="font-size:9px; font-weight:bold;">DETAILS:</div>
                            <div id="fs_details" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:40px;">—</div>
                        </div>
                    </div>

                    <div style="border-top:2px solid #0f1445; padding-top:15px; margin-top:15px;">
                        <div style="display:grid; grid-template-columns:1fr 1fr; gap:30px; margin-top:30px;">
                            <div style="text-align:center;">
                                <div style="border-bottom:1px solid #000; height:50px; margin-bottom:8px;"></div>
                                <div style="font-weight:bold; font-size:11px;">APPLICANT SIGNATURE</div>
                                <div style="font-size:9px; color:#666;">WITH STAMP / SEAL</div>
                            </div>

                            <div style="text-align:center;">
                                <div style="border-bottom:1px solid #000; height:50px; margin-bottom:8px;"></div>
                                <div style="font-weight:bold; font-size:11px;">INVESTICA OFFICER SIGN</div>
                                <div style="font-size:9px; color:#666;">ALL DOCUMENTS ARE VERIFIED<br />WITH ORIGINAL</div>
                            </div>
                        </div>
                    </div>

                    <div style="margin-top:20px; padding:10px; background:#f8f9fa; border:1px solid #ddd; border-radius:4px;">
                        <div style="font-weight:bold; font-size:10px; color:#0f1445; margin-bottom:8px;">
                            DOCUMENT SCANNED, UPLOADED, BACKED UP BY :-
                        </div>

                        <div style="display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-top:8px;">
                            <div>
                                <div style="font-size:9px; font-weight:bold;">NAME:</div>
                                <div id="fs_docname" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>

                            <div>
                                <div style="font-size:9px; font-weight:bold;">SIGN:</div>
                                <div id="fs_docsign" style="padding:4px; border:1px solid #ccc; background:#fff; min-height:18px;">—</div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Buttons -->
                <div style="padding:15px; border-top:2px solid #0f1445; display:flex; gap:10px; background:#f8f9fa;">
                    <button class="btn btn-primary" id="frontsheetEditBtn" style="background:#0f1445; border:none; padding:10px 20px; font-size:13px; font-weight:bold;">
                        Edit Form
                    </button>

                    <button class="btn btn-secondary" onclick="window.print()" style="padding:10px 20px; font-size:13px; font-weight:bold;">
                        Print
                    </button>
                </div>

            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Fontsheet.js"></script>
    <script src="~/js/LeftPanel.js"></script>

}
