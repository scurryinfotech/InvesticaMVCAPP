@{
    Layout = "_Layout";
}

<div class="card p-4">
    <h3 class="fw-bold">Dashboard</h3>
    <p class="text-muted">Welcome to the CRM Dashboard. You can create tickets from here.</p>

    <div class="card p-4 bg-light">
        <h4 class="fw-bold mb-3">Generate / Search Ticket</h4>

        <label>Search Ticket Number</label>
        <input id="ticketNumber" class="form-control mb-3" placeholder="Enter existing ticket number" />

        <button id="btnSearchTicket" class="btn btn-warning mb-4 w-100" href="/Home/Tickets">Search</button>

        <label>Select Company</label>
        <div style="position: relative;">
            <input type="text" id="companySearch" class="form-control mb-3" placeholder="Search company..." />
            <select id="selectCompany" class="form-select mb-3" size="6" style="position: absolute; z-index: 1000; width: 100%; display: none;">
                <option value="">Loading...</option>
            </select>
        </div>
        <input type="hidden" id="selectedCompanyId" />
        <a class="btn btn-warning" id="btnNext" href="/Home/Companies">Next</a>

        <div id="ticketResult" class="mt-4"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Dashboard.js"></script>
}