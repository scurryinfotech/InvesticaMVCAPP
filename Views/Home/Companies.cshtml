@{
    Layout = "_Layout";
    ViewData["Title"] = "Companies";
}

<div class="container mt-4">
    <div class="card p-4">
        <div class="d-flex align-items-center mb-3">
            <img id="companyLogo" src="" alt="logo" style="width:96px;height:96px;object-fit:contain;margin-right:18px;display:none;" />
            <div>
                <h2 id="companyName" class="mb-0"></h2>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Company Address</label>
            <textarea id="companyAddress" class="form-control" placeholder="Enter company address"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">License Type</label>
            <select id="licenseTypeSelect" class="form-select">
                <option value="">-- Select License Type --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select id="statusSelect" class="form-select">
                <option value="">-- Select Status --</option>
            </select>
        </div>

        <div class="d-flex gap-2">
            <button id="btnSaveCompany" class="btn btn-primary" href="/Home/OtherDetails">Submit</button>
            <button id="btnClearCompany" class="btn btn-secondary">Clear</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Companies.js"></script>
}