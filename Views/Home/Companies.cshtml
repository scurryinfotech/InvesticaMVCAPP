@{
    Layout = "_Layout";
    ViewData["Title"] = "Companies";
}
<div class="container mt-4">
    <div class="card p-4">
        <div class="d-flex align-items-center mb-3">
            <img id="companyLogo" src="" alt="logo" style="width:96px;height:96px;object-fit:contain;margin-right:18px;display:none;" />
            <div>
                <h2 id="companyName" class="mb-0"></h2>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Company Address</label>
            <textarea id="companyAddress" class="form-control" placeholder="Enter company address"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">License Type</label>
            <div style="position: relative;">
                <input type="text" id="licenseSearch" class="form-control" placeholder="Search license type..." />
                <select id="licenseTypeSelect" class="form-select" size="6" style="position: absolute; z-index: 1000; width: 100%; display: none;">
                    <option value="">Loading...</option>
                </select>
            </div>
            <input type="hidden" id="selectedLicenseId" />
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <div style="position: relative;">
                <input type="text" id="statusSearch" class="form-control" placeholder="Search status..." />
                <select id="statusSelect" class="form-select" size="6" style="position: absolute; z-index: 1000; width: 100%; display: none;">
                    <option value="">Loading...</option>
                </select>
            </div>
            <input type="hidden" id="selectedStatusId" />
        </div>
        <div class="d-flex gap-2">
            <button id="btnSaveCompany" class="btn btn-primary" href="/Home/Summary">Submit</button>
            <button id="btnClearCompany" class="btn btn-secondary">Clear</button>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Companies.js"></script>
}