@{
    ViewData["Title"] = "Frontsheet & Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div class="dashboard wizard-wrap">
            <div class="card p-4">

                <div class="wizard-title">Frontsheet &amp; Invoice Details</div>
                <div class="wizard-subtext">
                    This step displays the data that will be used to populate the Frontsheet and Invoice pages.
                    All editable inputs were removed — values are fetched from Company Info (previous step)
                    and left-panel filters / master-data.
                </div>

                <!-- Row 1 -->
                <div class="fs-grid">
                    <div class="fs-field">
                        <label>Company Name</label>
                        <div id="fs_company" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Company Address</label>
                        <div id="fs_address" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Contact / Phone</label>
                        <div id="fs_phone" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Email</label>
                        <div id="fs_email" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>GSTIN</label>
                        <div id="fs_gstin" class="fs-box">—</div>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="fs-grid two-row" style="margin-top:22px;">
                    <div class="fs-field">
                        <label>PAN</label>
                        <div id="fs_pan" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Entity Type</label>
                        <div id="fs_entity" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Product / Service</label>
                        <div id="fs_product" class="fs-box">—</div>
                    </div>

                    <div class="fs-field span-2">
                        <label>Location (Area / Ward / Zone)</label>
                        <div id="fs_location" class="fs-box">—</div>
                    </div>
                </div>

                <!-- Row 3 -->
                <div class="fs-grid" style="grid-template-columns: repeat(2, minmax(220px, 1fr)); margin-top:22px;">
                    <div class="fs-field">
                        <label>License Type (from Company)</label>
                        <div id="fs_license" class="fs-box">—</div>
                    </div>

                    <div class="fs-field">
                        <label>Status (from Company)</label>
                        <div id="fs_status" class="fs-box">Active</div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="wizard-actions">
                    <button type="button" class="btn-fetch" onclick="fetchFSData()">Fetch Data</button>
                    <button type="button" class="btn-next" onclick="goSummary()">Next</button>
                    <button type="button" class="btn-back" onclick="window.location.href='/Home/Companies'">Back</button>
                </div>

            </div>
        </div>


@section Scripts {
<script src="~/js/FonstsheetAndInvoice.js"></script>
}
