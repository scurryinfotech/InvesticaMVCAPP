@{
    Layout = "_Layout";
}

<div class="container full-width-container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title">Master Data Management</h2>
            <p class="text-muted">Manage Employees, Companies, License Types, Statuses and Entity Types.</p>

            <ul class="nav nav-tabs" id="masterTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="employees-tab" data-bs-toggle="tab" href="#employees" role="tab">Employees <span id="count-employees" class="badge bg-dark ms-1">0</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="companies-tab" data-bs-toggle="tab" href="#companies" role="tab">Companies <span id="count-companies" class="badge bg-dark ms-1">0</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="license-tab" data-bs-toggle="tab" href="#licenseTypes" role="tab">License Types <span id="count-licenses" class="badge bg-dark ms-1">0</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="status-tab" data-bs-toggle="tab" href="#statuses" role="tab">Statuses <span id="count-statuses" class="badge bg-dark ms-1">0</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="entitytype-tab" data-bs-toggle="tab" href="#entityTypes" role="tab">Entity Types <span id="count-entitytypes" class="badge bg-dark ms-1">0</span></a>
                </li>
            </ul>

            <div class="tab-content mt-3">
                <!-- Employees -->
                <div class="tab-pane fade show active" id="employees" role="tabpanel">
                    <div class="d-flex justify-content-between mb-2">
                        <button id="btnAddEmployee" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add</button>
                        <input id="searchEmployees" class="form-control w-25" placeholder="Search" />
                    </div>
                    <div class="table-responsive">
                        <table id="tblEmployees" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:50px">#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th style="width:120px">Active</th>
                                    <th style="width:160px">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- Companies (unikey hidden) -->
                <div class="tab-pane fade" id="companies" role="tabpanel">
                    <div class="d-flex justify-content-between mb-2">
                        <button id="btnAddCompany" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add</button>
                        <input id="searchCompanies" class="form-control w-25" placeholder="Search" />
                    </div>
                    <div class="table-responsive">
                        <table id="tblCompanies" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:50px">#</th>
                                    <th>Company Name</th>
                                    <th style="width:120px">Active</th>
                                    <th style="width:160px">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- License Types (unikey hidden) -->
                <div class="tab-pane fade" id="licenseTypes" role="tabpanel">
                    <div class="d-flex justify-content-between mb-2">
                        <button id="btnAddLicense" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add</button>
                        <input id="searchLicenses" class="form-control w-25" placeholder="Search" />
                    </div>
                    <div class="table-responsive">
                        <table id="tblLicenses" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:50px">#</th>
                                    <th>App Type</th>
                                    <th style="width:120px">Active</th>
                                    <th style="width:160px">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- Statuses (unikey hidden) -->
                <div class="tab-pane fade" id="statuses" role="tabpanel">
                    <div class="d-flex justify-content-between mb-2">
                        <button id="btnAddStatus" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add</button>
                        <input id="searchStatuses" class="form-control w-25" placeholder="Search" />
                    </div>
                    <div class="table-responsive">
                        <table id="tblStatuses" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:50px">#</th>
                                    <th>Status Name</th>
                                    <th style="width:120px">Active</th>
                                    <th style="width:160px">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- Entity Types -->
                <div class="tab-pane fade" id="entityTypes" role="tabpanel">
                    <div class="d-flex justify-content-between mb-2">
                        <button id="btnAddEntityType" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add</button>
                        <input id="searchEntityTypes" class="form-control w-25" placeholder="Search" />
                    </div>
                    <div class="table-responsive">
                        <table id="tblEntityTypes" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:50px">#</th>
                                    <th>Name</th>
                                    <th style="width:120px">Active</th>
                                    <th style="width:160px">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<!-- Generic Modal for Create/Edit -->
<div class="modal fade" id="masterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="masterForm" class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title">Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalBodyContent"></div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="entityType" />
                <input type="hidden" id="entityId" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/MasterData.js"></script>
}