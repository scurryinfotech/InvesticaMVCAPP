@{
    ViewData["Title"] = "License Renewals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom">
    <div class="right-panel" style="grid-column: 1 / span 2;">
        <div class="dashboard">
            <div class="card p-4">

                <!-- HEADING + ADD BUTTON -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 style="color:#0f1445; font-weight:700; margin-bottom:0;">Upcoming License Renewals</h5>
                    <button class="btn btn-success btn-sm" id="btnAddNew">
                        <i class="fas fa-plus"></i> Add New
                    </button>
                </div>

                <!-- FILTERS -->
                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <select id="filter_company" class="form-select form-select-sm">
                            <option value="">All Companies</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select id="filter_license" class="form-select form-select-sm">
                            <option value="">All License Types</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select id="filter_location" class="form-select form-select-sm">
                            <option value="">All Locations</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select id="filter_status" class="form-select form-select-sm">
                            <option value="">All Status</option>
                            <option value="URGENT">Urgent (≤ 30 days)</option>
                            <option value="DUE SOON">Due Soon (≤ 60 days)</option>
                            <option value="PENDING">Pending (> 60 days)</option>
                            <option value="EXPIRED">Expired</option>
                        </select>
                    </div>
                </div>

                <!-- RESET BUTTON -->
                <div class="mb-3">
                    <button class="btn btn-warning btn-sm" id="btnResetFilters">
                        <i class="fas fa-undo"></i> Reset Filters
                    </button>
                </div>

                <!-- TABLE -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-sm" id="renewalsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>SR NO</th>
                                <th>COMPANY</th>
                                <th>UNIKEY</th>
                                <th>LICENSE TYPE</th>
                                <th>LOCATION</th>
                                <th>EXPIRY DATE</th>
                                <th>DAYS LEFT</th>
                                <th>STATUS</th>
                                <th style="width: 110px;">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody id="renewalsBody">
                            <tr>
                                <td colspan="9" class="text-center text-muted">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ADD/EDIT MODAL -->
<div class="modal fade" id="renewalModal" tabindex="-1" aria-labelledby="renewalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background:#0f1445; color:#fff;">
                <h5 class="modal-title" id="renewalModalLabel">Add New Renewal</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="renewalId" value="0">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Company <span class="text-danger">*</span></label>
                        <select id="modalCompanyId" class="form-select form-select-sm">
                            <option value="">-- Select Company --</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">License Type <span class="text-danger">*</span></label>
                        <select id="modalLicenseTypeId" class="form-select form-select-sm">
                            <option value="">-- Select License Type --</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">City / State <span class="text-danger">*</span></label>
                        <input type="text" id="modalCityState" class="form-control form-control-sm" placeholder="e.g. MUMBAI / MAHARASHTRA">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Expiry Date <span class="text-danger">*</span></label>
                        <input type="date" id="modalExpiryDate" class="form-control form-control-sm">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Address <span class="text-danger">*</span></label>
                    <input type="text" id="modalAddress" class="form-control form-control-sm" placeholder="Full address">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Remarks</label>
                    <textarea id="modalRemarks" class="form-control form-control-sm" rows="2" placeholder="Any notes..."></textarea>
                </div>

                <div id="modalAlert" class="alert alert-danger d-none" role="alert"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete this renewal record?
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-sm" id="btnConfirmDelete">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Renewals.js"></script>
}