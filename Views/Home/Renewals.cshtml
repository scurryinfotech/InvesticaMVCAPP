@{
    ViewData["Title"] = "Renewals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-custom">
    <div class="right-panel" style="grid-column:1 / span 2;">
        <div class="dashboard">
            <div class="card p-4">

                <h5 style="color:#0f1445;font-weight:700;">Upcoming Renewals</h5>

                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <select id="filter_license" class="form-select form-select-sm">
                            <option value="">All License Types</option>
                            <option value="SHOP LICENSE">Shop License</option>
                            <option value="TRADE LICENSE">Trade License</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <select id="filter_location" class="form-select form-select-sm">
                            <option value="">All Locations</option>
                            <option value="KOLKATA">Kolkata</option>
                            <option value="MUMBAI">Mumbai</option>
                            <option value="DELHI">Delhi</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <input id="filter_company" class="form-control form-control-sm" placeholder="Search company...">
                    </div>

                    <div class="col-md-3">
                        <select id="filter_status" class="form-select form-select-sm">
                            <option value="">All Status</option>
                            <option value="URGENT">Urgent</option>
                            <option value="DUE SOON">Due Soon</option>
                            <option value="PENDING">Pending</option>
                        </select>
                    </div>
                </div>

                <table class="table table-bordered table-hover" id="renewalsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>SR NO</th>
                            <th>LICENSE TYPE</th>
                            <th>LOCATION</th>
                            <th>COMPANY</th>
                            <th>EXPIRY</th>
                            <th>DUE DATE</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody id="renewalsBody">
                        <tr data-license="SHOP LICENSE" data-location="KOLKATA" data-company="CUREFOODS INDIA PVT. LTD" data-status="URGENT">
                            <td>1</td>
                            <td>SHOP LICENSE</td>
                            <td>KOLKATA</td>
                            <td>CUREFOODS INDIA PVT. LTD</td>
                            <td>15-Mar-2025</td>
                            <td>15-Feb-2025</td>
                            <td>URGENT</td>
                        </tr>
                        <tr data-license="SHOP LICENSE" data-location="MUMBAI" data-company="INVESTIRE LEX & AUDIRE" data-status="URGENT">
                            <td>2</td>
                            <td>SHOP LICENSE</td>
                            <td>MUMBAI</td>
                            <td>INVESTIRE LEX & AUDIRE</td>
                            <td>20-Apr-2025</td>
                            <td>20-Mar-2025</td>
                            <td>URGENT</td>
                        </tr>
                        <tr data-license="TRADE LICENSE" data-location="DELHI" data-company="APEX RETAIL CORP" data-status="DUE SOON">
                            <td>3</td>
                            <td>TRADE LICENSE</td>
                            <td>DELHI</td>
                            <td>APEX RETAIL CORP</td>
                            <td>25-Jun-2025</td>
                            <td>25-May-2025</td>
                            <td>DUE SOON</td>
                        </tr>
                    </tbody>
                </table>

                <button class="btn btn-warning btn-sm" onclick="resetRenewalFilters()">Reset Filters</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Renewals.js"></script>
}
