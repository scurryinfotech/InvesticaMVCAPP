@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right-panel">
    <div class="dashboard">
        <div class="card p-4">
            <h2 style="font-weight:700;color:#0f1445;">Summary</h2>

            <div class="row g-3 mt-3">
                <div class="col-12">
                    <strong>Ticket:</strong> <span id="sTicket">Auto-generated on save</span>
                </div>

                <div class="col-md-8">
                    <div class="mb-2"><strong>Company:</strong> <span id="sCompany"></span></div>
                    <div class="mb-2"><strong>Address:</strong> <span id="sAddress"></span></div>
                    <div class="mb-2"><strong>Contact / Phone:</strong> <span id="sPhone"></span></div>
                    <div class="mb-2"><strong>Email:</strong> <span id="sEmail"></span></div>
                    <div class="mb-2"><strong>GSTIN:</strong> <span id="sGstin"></span></div>
                    <div class="mb-2"><strong>PAN:</strong> <span id="sPan"></span></div>
                    <div class="mb-2"><strong>Entity Type:</strong> <span id="sEntity"></span></div>
                    <div class="mb-2"><strong>Product / Service:</strong> <span id="sProduct"></span></div>
                    <div class="mb-2"><strong>Location:</strong> <span id="sLocation"></span></div>
                    <div class="mb-2"><strong>License:</strong> <span id="sLicense"></span></div>
                    <div class="mb-2"><strong>Status:</strong> <span id="sStatus"></span></div>
                </div>

                <div class="col-md-4 text-center">
                    <div id="logoContainer" style="min-height:120px;">
                        <img id="sLogo" src="~/images/placeholder-company.png" alt="company logo" style="max-width:100%; max-height:160px; display:none;" />
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button class="btn btn-warning" id="btnCreateTicket">Create Ticket</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Summary.js"></script>
}