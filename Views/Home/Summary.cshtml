@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
<link href="~/css/Summary.css" rel="stylesheet" />
}

<div class="right-panel">
    <div class="dashboard">
        <div class="summary-wrapper">
            <div class="summary-container">
                <div class="summary-card">
                    <!-- Header Section -->
                    <div class="summary-header">
                        <h2>
                            <svg width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                            </svg>
                            Ticket Summary
                        </h2>
                        <div class="ticket-info">
                            <strong>Ticket:</strong> <span id="sTicket">Auto-generated on save</span>
                        </div>
                    </div>

                    <!-- Body Section -->
                    <div class="summary-body">
                        <div class="row g-4">
                            <div class="col-lg-8">
                                <div class="details-grid">
                                    <div class="detail-item">
                                        <strong>🏢 Company</strong>
                                        <span id="sCompany">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>📍 Address</strong>
                                        <span id="sAddress">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>📞 Contact / Phone</strong>
                                        <span id="sPhone">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>📧 Email</strong>
                                        <span id="sEmail">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>🔢 GSTIN</strong>
                                        <span id="sGstin">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>🆔 PAN</strong>
                                        <span id="sPan">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>🏛️ Entity Type</strong>
                                        <span id="sEntity">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>📦 Product / Service</strong>
                                        <span id="sProduct">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>🌍 Location</strong>
                                        <span id="sLocation">—</span>
                                    </div>

                                    <div class="detail-item">
                                        <strong>📜 License</strong>
                                        <span id="sLicense">—</span>
                                    </div>

                                    <div class="detail-item" style="grid-column: 1 / -1;">
                                        <strong>✅ Status</strong>
                                        <span id="sStatus">—</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="logo-section" id="logoContainer">
                                    <img id="sLogo" src="~/images/placeholder-company.png" alt="company logo" style="display:none;" />
                                </div>
                            </div>
                        </div>

                        <!-- Action Section -->
                        <div class="action-section">
                            <button class="btn-create" id="btnCreateTicket">
                                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle; margin-right: 8px;">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                </svg>
                                Create Ticket
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Summary.js"></script>
}