<div class="container">
    <div class="left-panel mx-auto">
        <h4 class="mb-4">Filters</h4>
        <form id="filterForm" autocomplete="off">

            <!-- Frontsheet Filters -->
            <div id="frontsheetFilters" style="display:none;">
                <div class="mb-3">
                    <label for="frontsheetDate" class="form-label fw-bold">Date</label>
                    <input type="date" class="form-control" id="frontsheetDate" name="FrontsheetDate">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Company Name</label>
                    <div class="searchable-dropdown-wrapper">
                        <input type="text"
                               class="searchable-input multi-select"
                               id="frontsheetCompany"
                               placeholder="Select company"
                               autocomplete="off">
                        <input type="hidden" id="frontsheetCompanyValue" name="FrontsheetCompany">
                        <ul class="searchable-dropdown-list" id="frontsheetCompanyList"></ul>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Location</label>
                    <div class="searchable-dropdown-wrapper">
                        <input type="text"
                               class="searchable-input multi-select"
                               id="frontsheetLocation"
                               placeholder="Select location"
                               autocomplete="off">
                        <input type="hidden" id="frontsheetLocationValue" name="FrontsheetLocation">
                        <ul class="searchable-dropdown-list" id="frontsheetLocationList"></ul>
                    </div>
                </div>
            </div>
            <div id="applyResetFilters" class="d-flex gap-2 mt-4">
                <button type="button" id="submitBtn"
                        class="btn btn-primary flex-fill fw-bold"
                        style="background:#0f1445; border:none;">
                    Submit
                </button>

                <button type="button" id="clearBtn"
                        class="btn btn-warning flex-fill fw-bold text-white"
                        style="background:#f78812; border:none;">
                    Clear
                </button>
            </div>

        </form>
    </div>
</div>