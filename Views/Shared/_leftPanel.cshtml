<div class="left-panel">
    <form id="filterForm">
        <div id="frontsheetFilters" style="display:none;">
            <div class="mb-3">
                <label class="form-label fw-bold">Date</label>
                <input type="date" class="form-control" id="frontsheetDate">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Company Name</label>
                <select class="form-select searchable-dropdown" id="frontsheetCompany">
                    <option value="">Select company</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Location</label>
                <select class="form-select searchable-dropdown" id="frontsheetLocation">
                    <option value="">Select location</option>
                </select>
            </div>
        </div>
        <div id="invoiceFilters" style="display:none;">
            <div class="mb-3">
                <label class="form-label fw-bold">Invoice Date</label>
                <input type="date" class="form-control" id="invoiceDate">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Invoice Number</label>
                <input type="text" class="form-control" id="invoiceNumber" placeholder="Enter invoice number">
            </div>
        </div>
        <div id="detailsFilters">
            <div class="mb-3">
                <label class="form-label fw-bold">Start Date</label>
                <input type="date" class="form-control" id="startDate">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">End Date</label>
                <input type="date" class="form-control" id="endDate">
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Company Name</label>
                <select class="form-select searchable-dropdown" id="companyName">
                    <option value="">Select company</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Location</label>
                <select class="form-select searchable-dropdown" id="location">
                    <option value="">Select location</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">License Type</label>
                <select class="form-select searchable-dropdown" id="licenseType">
                    <option value="">Select license type</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Status</label>
                <select class="form-select searchable-dropdown" id="status">
                    <option value="">Select status</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Tracking Number</label>
                <input type="text" class="form-control" id="trackingNumber" placeholder="Enter tracking number">
            </div>
        </div>
        <div id="applyResetFilters" class="d-flex gap-2 mt-4">
            <button class="btn btn-primary flex-fill fw-bold" type="button" id="submitBtn"
                    style="background:#0f1445; border:none;">
                Submit
            </button>
            <button class="btn btn-warning flex-fill fw-bold text-white" type="button" id="clearBtn"
                    style="background:#f78812; border:none;">
                Clear
            </button>
        </div>
    </form>
</div>
